<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center">


            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/playerImage0"
                android:onClick="togglePlayer"
                android:layout_gravity="center_vertical"
                android:background="@drawable/no_player"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/bot"
                android:id="@+id/playerType0"
                android:onClick="togglePlayerType"
                android:layout_gravity="center_vertical" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/default_name"
                android:id="@+id/playerName0"
                android:gravity="center"
                android:editable="true"
                android:enabled="false" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center">


            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/playerImage1"
                android:onClick="togglePlayer"
                android:layout_gravity="center_vertical"
                android:background="@drawable/no_player" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/bot"
                android:id="@+id/playerType1"
                android:onClick="togglePlayerType"
                android:layout_gravity="center_vertical" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/bot"
                android:id="@+id/playerName1"
                android:gravity="center"
                android:editable="true"
                android:enabled="false" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center">


            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/playerImage2"
                android:onClick="togglePlayer"
                android:layout_gravity="center_vertical"
                android:background="@drawable/no_player" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/bot"
                android:id="@+id/playerType2"
                android:onClick="togglePlayerType"
                android:layout_gravity="center_vertical" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/bot"
                android:id="@+id/playerName2"
                android:gravity="center"
                android:editable="true"
                android:enabled="false" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center">


            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/playerImage3"
                android:onClick="togglePlayer"
                android:layout_gravity="center_vertical"
                android:background="@drawable/no_player" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/bot"
                android:id="@+id/playerType3"
                android:onClick="togglePlayerType"
                android:layout_gravity="center_vertical" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/bot"
                android:id="@+id/playerName3"
                android:gravity="center"
                android:editable="true"
                android:enabled="false" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center">


            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/playerImage4"
                android:onClick="togglePlayer"
                android:layout_gravity="center_vertical"
                android:background="@drawable/no_player" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/bot"
                android:id="@+id/playerType4"
                android:onClick="togglePlayerType"
                android:layout_gravity="center_vertical" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/bot"
                android:id="@+id/playerName4"
                android:gravity="center"
                android:editable="true"
                android:enabled="false" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center">


            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/playerImage5"
                android:onClick="togglePlayer"
                android:layout_gravity="center_vertical"
                android:background="@drawable/no_player" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/bot"
                android:id="@+id/playerType5"
                android:onClick="togglePlayerType"
                android:layout_gravity="center_vertical" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/bot"
                android:id="@+id/playerName5"
                android:gravity="center"
                android:editable="true"
                android:enabled="false" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="80"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_game"
            android:id="@+id/startButton"
            android:onClick="startGame"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>


</LinearLayout>